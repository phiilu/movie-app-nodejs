<div class="mt-8 space-y-2">
    <h2 class="text-xl text-gray-600 truncate hover:text-gray-500">{{ title }}</h2>
    <div>
        <img src="{{ poster_path }}" alt="{{ title }}" />
    </div>
    <div class="grid items-center h-16" style="grid-template-columns: 1fr 2fr;">
        <div class="flex flex-col items-center">
            {{#ifCond vote_average '>=' 6.0 }}
            <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6 mx-auto text-green-500">
                <path fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z"
                    clip-rule="evenodd"></path>
            </svg>
            <span class="inline-block text-green-500">{{ vote_average }}</span>
            {{else}}
            <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6 mx-auto text-red-500">
                <path fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z"
                    clip-rule="evenodd"></path>
            </svg>
            <span class="inline-block text-red-500">{{ vote_average }}</span>
            {{/ifCond}}
        </div>
        <div>
            <p class="text-lg leading-relaxed text-gray-400 ">{{ release_date }}</p>
            <p class="text-sm text-gray-400">
                {{#each genres}}
                {{ this }}{{#unless @last}},{{/unless}}
                {{/each}}
            </p>
        </div>

    </div>
</div>