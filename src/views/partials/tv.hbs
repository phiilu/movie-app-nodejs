<div class="mt-8 space-y-2{{#if @last}} pr-8{{/if}}">
    <a href="/tv/{{ id }}">
        <h2 title='{{ name }}' class="text-xl text-gray-600 truncate hover:text-gray-500">{{ shortTitle }}</h2>
    </a>
    <a href="/tv/{{ id }}" class="block w-48 sm:w-full sm:h-full">
        <img class="object-contain w-full h-full rounded" src="{{ poster_path }}" alt="{{ name }}" />
    </a>
    <div class="grid items-center h-16" style="grid-template-columns: 1fr 2fr;">
        {{> rating rating=vote_average}}
        <div>
            <p class="text-lg leading-relaxed text-gray-400 ">{{ release_date }}</p>
            <p class="text-sm text-gray-400">
                {{#each genres}}
                {{ this }}{{#unless @last}},{{/unless}}
                {{/each}}
            </p>
        </div>
    </div>
</div>