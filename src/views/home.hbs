  class="flex p-4 space-x-8 overflow-x-scroll scrolling-touch sm:p-0 sm:overflow-hidden sm:grid sm:gap-8 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 ">
  {{#each nowPlayingMovies}}
  {{> movie }}
  {{/each}}
</div>