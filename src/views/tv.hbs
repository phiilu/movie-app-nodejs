<h1 class="px-4 text-lg font-semibold tracking-wider text-yellow-500 uppercase sm:px-0">Popular TV Shows</h1>
<div
    class="flex w-screen p-4 space-x-8 overflow-x-scroll scrolling-touch md:w-full sm:p-0 sm:overflow-hidden sm:grid sm:gap-8 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 sm:space-x-0">
    {{#each popularTv}}
    {{> tv }}
    {{/each}}
</div>

<h1 class="px-4 mt-20 text-lg font-semibold tracking-wider text-yellow-500 uppercase sm:px-0">Top Rated TV Shows</h1>
<div
    class="flex w-screen p-4 space-x-8 overflow-x-scroll scrolling-touch sm:p-0 sm:overflow-hidden sm:grid sm:gap-8 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 sm:space-x-0 md:w-full">
    {{#each topRatedTv}}
    {{> tv }}
    {{/each}}
</div>