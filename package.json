{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=13"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node --inspect --require ts-node/register --require dotenv/config src/index.ts",
    "build": "tsc",
    "build:css": "npx postcss-cli src/styles/index.css -o src/public/styles/index.css"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "eslint lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "name": "nodejs",
  "author": "Florian Kapfenberger",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/express-handlebars": "^3.1.0",
    "@types/node": "^13.13.1",
    "@types/node-fetch": "^2.5.6",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "nodemon": "^2.0.3",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-postcss": "^2.8.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.3",
    "node-fetch": "^2.6.0",
    "tailwindcss": "^1.2.0"
  }
}
